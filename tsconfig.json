{
  "compilerOptions": {
    "target": "es5",
    "module": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src"
    ],
    "types": [
      "node",
      "webpack-env"
    ]
  },
  "include": [
    "src/ts/**/*",
    "src/custom/**/*",
    "src/styles/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/styles/**/*.css"
  ]
}